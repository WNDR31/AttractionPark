<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galería de Atracciones</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/barra.css"> 
    <link rel="stylesheet" href="/nav.css"> 
</head>
<body>
<!-- Menú de navegación -->
<nav id="navegacion-principal" class="navbar navbar-expand-lg fixed-top">
    <div class="container-fluid">
        <a id="parque" class="navbar-brand" href="PaginaPrincipal.html">LagoonLand</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu-navegacion" aria-controls="menu-navegacion" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="menu-navegacion">
            <ul id="menu-navegacion" class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="PaginaPrincipal.html">HOME</a></li>
                <li class="nav-item"><a class="nav-link" href="PlanificaTuVisita.html">PLANIFICA TU VISITA</a></li>
                <li class="nav-item"><a class="nav-link" href="http://localhost:8080/attractionsgalery">DESCUBRE EL PARQUE</a></li>
                <li class="nav-item"><a class="nav-link" href="#footer">HORARIOS</a></li>
                <li class="nav-item"><a class="nav-link resaltar-tickets" href="Compra.html">COMPRA TUS TICKETS</a></li>
            </ul>
        </div>
    </div>
</nav>
<!-- Botón del mapa flotante -->
<a href="http://localhost:8080/map" class="map-button">
    <i class="fas fa-map-marked-alt"></i>
    <span class="d-none d-sm-inline">Ver Mapa</span>
</a>

<!-- Overlay de carga -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="spinner"></div>
</div>

<!-- Encabezado con estilo -->
<div class="header-gallery">
    <div class="container">
        <h1><i class="fas fa-theater-masks"></i> Galería de Atracciones</h1>
        <p class="lead">Descubre las emocionantes atracciones de nuestro parque</p>
    </div>
</div>

<div class="container">
    <!-- Sección de Filtros mejorada -->
    <div class="filter-section" id="filterSection">
        <form id="filterForm" action="/attractions/filter" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="zone" class="filter-label">
                        <i class="fas fa-map-marked-alt"></i> Zona
                    </label>
                    <select class="form-select" id="zone" name="zone">
                        <option value="">Todas las zonas</option>
                        {{#zones}}
                            <option value="{{name}}">{{name}}</option>
                        {{/zones}}
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="intensity" class="filter-label">
                        <i class="fas fa-bolt"></i> Intensidad
                    </label>
                    <select class="form-select" id="intensity" name="intensity">
                        <option value="">Todas las intensidades</option>
                        {{#intensities}}
                            <option value="{{name}}">{{name}}</option>
                        {{/intensities}}
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="type" class="filter-label">
                        <i class="fas fa-tag"></i> Tipo
                    </label>
                    <select class="form-select" id="type" name="type">
                        <option value="">Todos los tipos</option>
                        {{#types}}
                            <option value="{{name}}">{{name}}</option>
                        {{/types}}
                    </select>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2 filter-actions">
                        <button type="submit" class="btn btn-filter" id="applyFilters">
                            <i class="fas fa-filter"></i> Aplicar Filtros
                        </button>
                        <button type="button" id="resetButton" class="btn btn-reset">
                            <i class="fas fa-undo"></i> Limpiar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Galería de Atracciones -->
    <div class="row" id="attractionsContainer">
        {{#attractions}}
            <div class="col-lg-4 col-md-6 mb-4 attraction-item" data-zone="{{zone.name}}" data-intensity="{{intensity.name}}" data-type="{{type.name}}">
                <div class="attraction-card h-100">
                    <img src="/{{imageUrl1}}" alt="{{name}}" class="img-fluid" 
                     onerror="this.onerror=null;this.src='https://via.placeholder.com/400x220?text=Imagen+no+disponible';">
                    <div class="card-body">
                        <h5 class="card-title">{{name}}</h5>
                        
                        <div class="attraction-meta">
                            {{#type.name}}
                            <span class="meta-item">
                                <i class="fas fa-tag"></i> {{type.name}}
                            </span>
                            {{/type.name}}
                            {{#intensity.name}}
                            <span class="meta-item">
                                <i class="fas fa-bolt"></i> {{intensity.name}}
                            </span>
                            {{/intensity.name}}
                            {{#zone.name}}
                            <span class="meta-item">
                                <i class="fas fa-map-marker-alt"></i> {{zone.name}}
                            </span>
                            {{/zone.name}}
                        </div>
                        
                        <a href="/attractions/{{id}}" class="btn btn-details">
                            <i class="fas fa-info-circle"></i> Ver detalles
                        </a>
                    </div>
                </div>
            </div>
        {{/attractions}}

        {{^attractions}}
            <div class="no-results show">
                <i class="fas fa-search"></i>
                <p>No se encontraron atracciones que coincidan con los filtros seleccionados.</p>
                <a href="/attractionsgalery" class="btn btn-reset mt-3">
                    <i class="fas fa-undo"></i> Mostrar todas
                </a>
            </div>
        {{/attractions}}
    </div>
</div>

<!-- Footer -->
<footer class="footer">
    <div class="container text-center">
        <p class="mb-0">© 2023 Parque de Atracciones. Todos los derechos reservados.</p>
    </div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const resetButton = document.getElementById('resetButton');
        const filterForm = document.getElementById('filterForm');
        const applyFilters = document.getElementById('applyFilters');
        const loadingOverlay = document.getElementById('loadingOverlay');
        const attractionsContainer = document.getElementById('attractionsContainer');
        const noResults = document.querySelector('.no-results');
        
        // Función para mostrar u ocultar el overlay de carga
        function setLoading(loading) {
            if (loading) {
                loadingOverlay.classList.add('active');
                document.body.style.overflow = 'hidden';
            } else {
                loadingOverlay.classList.remove('active');
                document.body.style.overflow = '';
            }
        }
        
        // Función para animar el filtrado
        function animateFilterChange() {
            // Guardar la posición actual del scroll
            const scrollPosition = window.scrollY;
            const filterSection = document.getElementById('filterSection');
            
            // Aplicar animación de transición
            filterSection.style.opacity = '0.7';
            filterSection.style.transform = 'translateY(-10px)';
            
            // Mostrar overlay de carga
            setLoading(true);
            
            // Esperar un momento para que se vea la animación
            setTimeout(() => {
                filterSection.style.opacity = '1';
                filterSection.style.transform = 'translateY(0)';
                
                // Restaurar la posición del scroll después de la animación
                window.scrollTo({
                    top: scrollPosition,
                    behavior: 'instant' // Usamos 'instant' para evitar animación de scroll
                });
                
                // Ocultar overlay después de un breve tiempo
                setTimeout(() => {
                    setLoading(false);
                }, 300);
            }, 300);
        }
        
        // Manejar el envío del formulario
        filterForm.addEventListener('submit', function(e) {
            e.preventDefault();
            animateFilterChange();
            
            // Simular un retraso para la transición (en producción sería la llamada AJAX)
            setTimeout(() => {
                // Aquí iría tu lógica de filtrado real
                this.submit();
            }, 500);
        });
        
        // Manejar el botón de reset
        resetButton.addEventListener('click', function() {
            // Guardar posición del scroll
            const scrollPosition = window.scrollY;
            
            // Animación de reset
            animateFilterChange();
            
            // Resetear los valores de los select
            const selects = filterForm.querySelectorAll('select');
            selects.forEach(select => {
                select.value = '';
                select.dispatchEvent(new Event('change'));
            });
            
            // Enviar el formulario (esto recargará la página sin filtros)
            setTimeout(() => {
                filterForm.submit();
            }, 500);
        });
        
        // Actualizar estilos de los selectores al cargar la página
        document.querySelectorAll('.form-select').forEach(select => {
            if(select.value !== '') {
                select.classList.add('selected');
            }
            
            // Escuchar cambios en los selectores
            select.addEventListener('change', function() {
                if(this.value !== '') {
                    this.classList.add('selected');
                } else {
                    this.classList.remove('selected');
                }
            });
        });
        
        // Asegurar que las imágenes PNG se muestren correctamente
        document.querySelectorAll('.attraction-card img').forEach(img => {
            if(img.src.toLowerCase().endsWith('.png')) {
                img.style.backgroundColor = '#f8f9fa';
            }
        });
        
        // Prevenir el comportamiento predeterminado del formulario si no hay cambios
        filterForm.addEventListener('submit', function(e) {
            const formData = new FormData(this);
            let hasFilters = false;
            
            for (const [key, value] of formData.entries()) {
                if (value !== '') {
                    hasFilters = true;
                    break;
                }
            }
            
            if (!hasFilters) {
                e.preventDefault();
                // Animación sutil para indicar que no hay cambios
                filterForm.classList.add('no-changes');
                setTimeout(() => {
                    filterForm.classList.remove('no-changes');
                }, 1000);
            }
        });
    });
</script>
</body>
</html>